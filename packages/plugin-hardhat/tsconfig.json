{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // Pure ESM
    "moduleResolution": "Bundler", // More lenient than NodeNext
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}